            text-align: center;
            color: #ffd700;
            text-transform: uppercase;
            letter-spacing: 3px;
        }

        #map {
            height: 600px;
            width: 100%;
            border-radius: 20px;
            box-shadow: 0 10px 50px rgba(0, 0, 0, 0.5);
            border: 2px solid rgba(255, 193, 7, 0.3);
        }

